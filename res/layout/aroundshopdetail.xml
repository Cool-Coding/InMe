<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:id="@+id/aroundshop">

    <ImageView android:id="@+id/shopimage"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="@dimen/aroundshop_detail_margin2"/>
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.8">

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:orientation="vertical">
            <ImageView android:id="@+id/shopimage2"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_marginTop="@dimen/aroundshop_detail_margin2"
                       android:visibility="invisible"/>
            <!--商户名-->
            <cn.yang.inme.utils.border.BottomBorderLinearLayout
                    android:id="@+id/shopname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/shop_detail_item_border"
                    android:paddingLeft="@dimen/aroundshop_detail_margin"
                    android:layout_marginLeft="@dimen/aroundshop_detail_margin_LR"
                    android:layout_marginRight="@dimen/aroundshop_detail_margin_LR"
                    android:layout_marginTop="@dimen/aroundshop_detail_margin2">

            </cn.yang.inme.utils.border.BottomBorderLinearLayout>

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal"
                          android:background="@drawable/shop_detail_item_border"
                          android:layout_marginLeft="@dimen/aroundshop_detail_margin_LR"
                          android:layout_marginRight="@dimen/aroundshop_detail_margin_LR"
                          android:layout_marginTop="@dimen/aroundshop_detail_margin2">
                <!--评价-->
                <LinearLayout android:id="@+id/comments"
                              android:layout_width="match_parent"
                              android:layout_height="match_parent"
                              android:orientation="vertical"
                              android:layout_weight="1">

                </LinearLayout>

                <!--人均(在线预订)-->
                <LinearLayout
                        android:id="@+id/ave_price"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_weight="2">

                </LinearLayout>
            </LinearLayout>

            <!--电话-->
            <LinearLayout android:id="@+id/telephone"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal"
                          android:background="@drawable/shop_detail_item_border"
                          android:layout_marginLeft="@dimen/aroundshop_detail_margin_LR"
                          android:layout_marginRight="@dimen/aroundshop_detail_margin_LR"
                          android:layout_marginTop="@dimen/aroundshop_detail_margin2">

            </LinearLayout>

            <!--地址-->
            <LinearLayout android:id="@+id/address"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal"
                          android:background="@drawable/shop_detail_item_border"
                          android:layout_marginLeft="@dimen/aroundshop_detail_margin_LR"
                          android:layout_marginRight="@dimen/aroundshop_detail_margin_LR"
                          android:layout_marginTop="@dimen/aroundshop_detail_margin2">

            </LinearLayout>

            <!--团购区域-->
            <LinearLayout android:id="@+id/tuangou"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="vertical"
                          android:background="@drawable/shop_detail_item_border"
                          android:paddingLeft="@dimen/aroundshop_detail_margin"
                          android:layout_marginLeft="@dimen/aroundshop_detail_margin_LR"
                          android:layout_marginRight="@dimen/aroundshop_detail_margin_LR"
                          android:layout_marginTop="@dimen/aroundshop_detail_margin2"
                          android:visibility="gone">

            </LinearLayout>

            <!--优惠券区域-->
            <LinearLayout android:id="@+id/youhui"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="vertical"
                          android:background="@drawable/shop_detail_item_border"
                          android:paddingLeft="@dimen/aroundshop_detail_margin"
                          android:layout_marginLeft="@dimen/aroundshop_detail_margin_LR"
                          android:layout_marginRight="@dimen/aroundshop_detail_margin_LR"
                          android:layout_marginTop="@dimen/aroundshop_detail_margin2"
                          android:visibility="gone">

            </LinearLayout>

            <cn.yang.inme.utils.border.BottomBorderLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/shop_detail_item_border"
                    android:layout_marginLeft="@dimen/aroundshop_detail_margin_LR"
                    android:layout_marginRight="@dimen/aroundshop_detail_margin_LR"
                    android:layout_marginTop="@dimen/aroundshop_detail_margin2"
                    android:paddingTop="10dp">
                <TextView
                        android:id="@+id/comments_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/comments_title"
                        android:gravity="left"/>
            </cn.yang.inme.utils.border.BottomBorderLinearLayout>

            <!--评价区域-->
            <LinearLayout android:id="@+id/comment_content"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="vertical"
                          android:layout_marginLeft="@dimen/aroundshop_detail_margin_LR"
                          android:layout_marginRight="@dimen/aroundshop_detail_margin_LR"
                          android:background="@drawable/shop_detail_item_border">
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</FrameLayout>